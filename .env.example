# =============================================================================
# CONFIGURACIÓN DE LA APLICACIÓN YOLO ANNOTATOR CON JWT Y MYSQL
# =============================================================================
# 
# Este archivo contiene las variables de entorno necesarias para el proyecto.
# Copia este archivo como .env y modifica los valores según tu configuración.
#
# IMPORTANTE: Nunca subas el archivo .env real al repositorio por seguridad.
# =============================================================================

# ===== CONFIGURACIÓN DE BASE DE DATOS MYSQL =====
# Configuración para conectar con MySQL/MariaDB
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=tu_password_mysql_aqui
DB_NAME=yolo_annotator

# ===== SEGURIDAD JWT =====
# Clave secreta para firmar tokens JWT (¡CAMBIAR EN PRODUCCIÓN!)
# Debe ser una cadena larga y aleatoria de al menos 32 caracteres
SECRET_KEY=your-super-secret-jwt-key-change-this-in-production-12345678901234567890
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440

# ===== CONFIGURACIÓN DEL SERVIDOR =====
# Dirección IP y puerto donde se ejecutará la aplicación
HOST=127.0.0.1
PORT=8002
DEBUG=True

# ===== CONFIGURACIÓN ADICIONAL (OPCIONAL) =====
# Estas variables son opcionales y tienen valores por defecto en el código

# Configuración de archivos
# MAX_FILE_SIZE_MB=50
# ALLOWED_IMAGE_EXTENSIONS=jpg,jpeg,png,webp,gif,bmp

# Configuración de sesiones
# MAX_SESSIONS_PER_USER=100
# DEFAULT_CANVAS_SIZE=640

# Configuración de augmentación
# AUGMENTATION_VARIANTS=negativo,brillo,espejo,rotacion,desenfoque,contraste
# MAX_AUGMENTATION_WORKERS=4

# ===== CONFIGURACIÓN PARA TESTING =====
